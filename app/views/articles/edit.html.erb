<%= render 'articles/navbar', locals: {articles: @articles}%>
<section id="content">
  <h2>Edit: <%=@article.title %></h2>

  <%= form_for :article, url: articles_path(@article), method: :patch do |a| %>
    <%if @article.errors.any? %>
      <% @article.errors.full_messages.each do |msg| %>
        <div class="alert alert-danger"><%= msg %></div>
      <% end %>
    <% end %>
    <p>
      <%= a.label :title %><br>
      <%= a.text_field :title, class: 'article-form-fiels' %>
    </p>
    <p>
      <%= a.label :text %><br>
      <%= a.text_area :text, class: 'article-form-fiels' %>
    </p>
    <p>
      <%= a.label :img %><br>
      <%= a.text_field :img, class: 'article-form-fiels' %>
    </p>
    <p>
      <%= a.submit class: 'article-form-btn'%>
    </p>
  <% end %>
  <%= render 'articles/users', locals: {articles: @users_count}%>
</section>